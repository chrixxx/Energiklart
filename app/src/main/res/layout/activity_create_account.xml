<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.venovu.energiklart.Create_account">

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Användarnamn"
        android:ems="10"
        android:id="@+id/user_create"
        android:layout_marginTop="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:ems="10"
        android:id="@+id/email_create"
        android:layout_below="@+id/user_create"
        android:layout_alignStart="@+id/user_create"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Telefonnummer"
        android:ems="10"
        android:id="@+id/phone_create"
        android:layout_below="@+id/email_create"
        android:layout_alignStart="@+id/email_create"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Lösenord"
        android:ems="10"
        android:id="@+id/password_create"
        android:layout_below="@+id/phone_create"
        android:layout_alignStart="@+id/phone_create"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Skapa"
        android:id="@+id/create_button"
        android:layout_below="@+id/password_create"
        android:layout_alignStart="@+id/password_create"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Skapa ny användare"
        android:id="@+id/textView12"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/create_button"
        android:layout_marginTop="40dp" />
</RelativeLayout>
