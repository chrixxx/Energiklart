<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.venovu.energiklart.Tab_Fragment1_Kund">


    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Mäklare"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mäklare betalar"
        android:id="@+id/checkBox"
        android:layout_alignBottom="@+id/editText"
        android:layout_toEndOf="@+id/editText"
        android:layout_marginStart="60dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorLine"
        android:layout_marginTop="70dp"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Byggnadens ägare - kontaktuppgifter"
        android:id="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ägarens namn"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Personnummer / Org. nummer"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Fastighetsbeteckning"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_marginTop="35dp"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Adress"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Postnummer"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Postort"
        android:id="@+id/editText7"
        android:layout_below="@+id/editText6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Telefonnummer"
        android:ems="10"
        android:id="@+id/editText20"
        android:layout_below="@+id/view"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Mobiltelefon"
        android:ems="10"
        android:id="@+id/editText21"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignEnd="@+id/editText20" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="E-post"
        android:ems="10"
        android:id="@+id/editText22"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Fakturaadress"
        android:id="@+id/editText23"
        android:layout_above="@+id/editText5"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
