<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.venovu.energiklart.Tab_Fragment1_Kund">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorLine"
        android:layout_marginTop="70dp"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Byggnadens ägare - kontaktuppgifter"
        android:id="@+id/textView2"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Ägarens namn"
        android:ems="10"
        android:id="@+id/name"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Personnummer / Org. nummer"
        android:ems="10"
        android:id="@+id/ssn"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Fastighetsbeteckning"
        android:id="@+id/fastighetsNr"
        android:layout_below="@+id/ssn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Adress"
        android:id="@+id/adress"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/fastighetsNr"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Postnummer"
        android:ems="10"
        android:id="@+id/postNr"
        android:layout_below="@+id/adress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Postort"
        android:id="@+id/postort"
        android:layout_below="@+id/postNr"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Telefonnummer"
        android:ems="10"
        android:id="@+id/phone"
        android:layout_below="@+id/cell"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Mobiltelefon"
        android:ems="10"
        android:id="@+id/cell"
        android:layout_below="@+id/view"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="E-post"
        android:ems="10"
        android:id="@+id/mail"
        android:layout_below="@+id/phone"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:hint="Fakturaadress"
        android:id="@+id/fakturaAd"
        android:layout_below="@+id/mail"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fått BG"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/adress"
        android:layout_alignStart="@+id/fakturaAd" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faktura 30 dagar"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/postNr"
        android:layout_alignStart="@+id/checkBox5" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faktura 10 dagar"
        android:id="@+id/checkBox5"
        android:layout_alignTop="@+id/postNr"
        android:layout_alignStart="@+id/checkBox3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spara"
        android:id="@+id/save"
        android:layout_alignTop="@+id/checkBox4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp" />

</RelativeLayout>
